{
  "templates": [
    {
      "patterns": [
        "*.md"
      ],
      "extra_reuse_cli_options": {
        "style": "html"
      }
    },
    {
      "patterns": [
        "*.jinja2"
      ],
      "extra_reuse_cli_options": {
        "force_dot_license": true
      }
    },
    {
      "patterns": [
        "*"
      ],
      "extra_reuse_cli_options": {
        "style": "python",
        "template": "hash"
      }
    }
  ],
  "licenses": [
    {
      "ref": "GPL-3.0-or-later",
      "patterns": [
        "CMakeLists.txt",
        "README.md",
        "*.inputrc",
        "*.sh",
        "*.sh.in"
      ]
    },
    {
      "ref": "CC0-1.0",
      "patterns": [
        "*"
      ]
    }
  ],
  "copyright_headers": [
    {
      "text": "%reuse.name% <%reuse.email%>",
      "patterns": [
        "*"
      ]
    }
  ],
  "extra_reuse_cli_options": {
    "copyright_prefix": "spdx",
    "merge_copyrights": true
  }
}
